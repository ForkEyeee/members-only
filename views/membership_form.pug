extends layout

block content
	h1= title

	form(method='POST' action='')
		div.form-group
			label(for='secretpassword') Password:
			input#firstname.form-control(type='text' placeholder='Enter the secret password' name = 'secretpassword' required='true' )
		button.btn.btn-primary(type='submit') Submit

	if errors
		ul
			for error in errors
				li(class="error-text") #{error.msg}
